{
  "version": "0.5.1",
  "name": "website",
  "description": "A project scaffold using Zola and TailwindCSS.",
  "author": "Josh Wiegand",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrwiegand/website"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "8.x.x"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:css": "postcss styles/styles.css --output static/styles.css --no-map",
    "build:html": "zola build",
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "postcss styles/styles.css --output static/styles.css --no-map --watch",
    "dev:html": "zola serve",
    "format": "prettier --write ."
  },
  "dependencies": {
    "autoprefixer": "10.4.13",
    "cssnano": "5.1.14",
    "npm-run-all": "4.1.5",
    "postcss-cli": "10.1.0",
    "prettier": "2.8.3",
    "tailwindcss": "3.2.4"
  }
}
